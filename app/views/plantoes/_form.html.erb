<%= form_for @plantao, :class => 'form-horizontal'  do |f| %>
  <fieldset>
    <% if @plantao.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@plantao.errors.count, "error") %> prohibited this plantao from being saved:</h2>

        <ul>
          <% @plantao.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="control-group">
      <%= f.label :where %>
      <%= f.text_field :where %>
    </div>
    <div class="control-group">
      <%= f.label :when %>
      <%= f.date_select :when, {:start_year => Time.now.year}, {:class => 'span1'} %>
    </div>
    <div class="control-group input-prepend">
      <%= f.label :how_much %>
      <span class="add-on">R$</span>
      <%= f.number_field :how_much %>
    </div>
    <div class="control-group input-append">
      <%= f.label :how_long %>
      <%= f.select :how_long, [12, 24], {}, {:class => 'span1'} %>
      <span class="add-on">horas</span>
    </div>
    <div class="control-group">
      <%= f.label :specialty %>
      <%= f.text_field :specialty %>
    </div>
    <div class="control-group">
      <%= f.label :contactName %>
      <%= f.text_field :contactName %>
    </div>
    <div class="control-group">
      <%= f.label :contactPhone %>
      <%= f.telephone_field :contactPhone %>
    </div>
    <div class="control-group">
      <%= f.label :obs %>
      <%= f.text_area :obs, :rows => 3 %>
    </div>
    <div class="actions">
      <%= f.submit :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
