body {
  @media (min-width: 979px) {
    padding-top: 78px;
  }
}

fieldset input, label {
  display: inline-block;
}

fieldset input {
  width: 14em;
}

fieldset label {
  width: 8em;
  text-align: right;
  padding-right: 1em;
}

.date {
  position: relative;
  top: 0.6em;
}

.label-info-light {
  background-color: #6fd1ed;
}

.contact.phone {
  display: block;
  background-image: url(<%= image_path('call.png') %>);
  width: 50px;
  height: 50px;
  background-size: contain;
}

/* Sobrescrevendo propriedades do navbar */
.brand:hover {
  background-color:#f0f0f0;
}
.navbar {
  @media (max-width: 979px) {
    margin-bottom:0px;
  }
}
.navbar-inner {
  <%#height:130px;%>
  .container {
    <%#padding-top:30px;%>
  }
  ul {
    @media (min-width: 979px) {
      padding-top:30px;
    }
  }
}

.banner {
  background:#CCC;
  .span12 {
    background:blue;
  }
  @media (max-width: 767px) {
    margin-left:-20px;
    margin-right:-20px;
  }
}

