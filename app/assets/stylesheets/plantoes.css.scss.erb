body {
  @media (min-width: 979px) {
    padding-top: 60px;
  }
}

fieldset input, label {
  display: inline-block;
}

fieldset input {
  width: 14em;
}

fieldset label {
  width: 8em;
  text-align: right;
  padding-right: 1em;
}

.date {
  position: relative;
  top: 0.6em;
}

.label-info-light {
  background-color: #6fd1ed;
}

.contact.phone {
  display: block;
  background-image: url(<%= image_path('call.png') %>);
  width: 50px;
  height: 50px;
  background-size: contain;
}
